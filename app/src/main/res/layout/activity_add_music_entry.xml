<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <EditText
        android:id="@+id/etSongName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Song name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/etArtistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Artist name"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/etSongName"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/etTuning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Tuning"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/etArtistName"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/etCapoPos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Capo position"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/etTuning"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Song lyrics"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/btnAddAccept"
        app:layout_constraintTop_toBottomOf="@+id/etCapoPos"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnAddAccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Add song"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />
</android.support.constraint.ConstraintLayout>